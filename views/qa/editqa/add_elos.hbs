<div class="container">
        <form class="form-horizontal" role="form"  action="/addelos" method="post" id = "myForm" > 
          
           
            <!--<form class="form-horizontal" role="form">-->
        
        <h3>Add new Expected Learning Outcomesz (ELOs)</h3>
        <br>
        
            <div class="form-group">
              <label for="inputType" class="col-md-2 control-label">Name : </label>
              <div class="col-md-4">
                <input type="text" class="form-control" id="elos_name" placeholder="Enter ELOs's name" name="elos_name" required>
              </div>
              
            </div>
            <div class="form-group">
             <label for="inputType" class="col-md-2 control-label">Description : </label>
              <div class="col-md-4">
                <textarea class="form-control" rows="5" id="elos_des" name="elos_des"></textarea>
              </div>
              <label for="inputType" class="col-md-2 control-label">No. : </label>
              <div class="col-md-4">
                  <input type="text" class="form-control" id="elos_no" placeholder="Enter ELO's number" name="elos_no" required>
              </div>
            </div>

            <p align = "right"> <a href = "/addelos"><button type="button" id="btnsubmit" class="btn btn-primary">Add</button></a></p>
        </form>

</div>