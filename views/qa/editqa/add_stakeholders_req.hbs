        $('#addScnt').live('click', function() {
                $('<p><label for="p_scnts"><input type="text" class="form-control" id="inputType" size="30" name="p_scnt_' + i +'" value="" placeholder="requirement" /></label> <button type="button" id="remScnt" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button></p>').appendTo(scntDiv);
                i++;
                return false;
        });
        
        $('#remScnt').live('click', function() { 
                if( i > 2 ) {
                        $(this).parents('p').remove();
                        i--;
                }
                return false;
        });
    });
</script>

