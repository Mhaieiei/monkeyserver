<h2>Make <strong>{{this.docId}}</strong> visible to</h2>

<div class="col-md-6">
	<form action="/document/{{this.docId}}/visibility" method="POST">
		<table class="table table-hover">
			<thread>
				<tr>
					<th width="20"></th>
					<th>Role</th>
				</tr>
			</thread>
			<tbody>
				{{#each role}}
				<tr>
					<td>
						{{#if this.checked}}
						<input type="checkbox" name="permitRole[]" value="{{this.value._id}}" checked="checked"/>
						{{else}}
						<input type="checkbox" name="permitRole[]" value="{{this.value._id}}" />
						{{/if}}
					</td>
					<td>{{this.value.name}}</td>
				</tr>
				{{/each}}
			</tbody>
		</table>

		<input class ="pull-right btn btn-lg btn-block btn-success" type="submit" value="save" />
	</form>
</div>