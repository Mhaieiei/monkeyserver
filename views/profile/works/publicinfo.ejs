<%- include ../../header.ejs %>

<h2>Publication</h2></header>
<% if(Userinfo.publicResearch.length >0){ %>

				
                <h3>Publication Information </h3>
                <form class="form-horizontal" role="form">
                    </div>

                    <div id="tab_2"><table class="table muffin table-striped table-hover margin-bottom0">
                    <thead>
                        <tr>  
                        <th>Index</th>                      
                        <th><a href="javascript:table_sort('tab_2',1)">Name Publication</a></th>
                        <th><a href="javascript:table_sort('tab_2',1)">Authors</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Type of Publication</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Date</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Page</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Conference Name</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Place</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Journal Name</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Vol</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Issue</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Article</a></th>
                        <th><a href="javascript:table_sort('tab_2',3)">Edit</a></th>
                        <th><a href="javascript:table_sort('tab_2',6)">Delete</a></th>
                        </tr>
                    </thead>
                   	<tbody>                   		
                    <% for(i=0;i< Userinfo.publicResearch.length;i++){%>
                        <% if(Userinfo.publicResearch[i].typepublic == 'intercon'){%>
                            <tr>
                            <td><%= i+1 %>
                            <td><%= Userinfo.publicResearch[i].namepublic %></td>
                            <td><% for( j=0;j< Userinfo.publicResearch[i].user.length;j++){%>
                                    - <%= Userinfo.publicResearch[i].user[j].iduser.local.title %>
                                    <%= Userinfo.publicResearch[i].user[j].iduser.local.name %>
                                    <%= Userinfo.publicResearch[i].user[j].iduser.local.surname %>
                                    <br>
                                 <%}%>
                            </td>
                            <td>International Conferences</td>
                            <td><%= Userinfo.publicResearch[i].datenum %></td>
                            <td><%= Userinfo.publicResearch[i].page %></td>

                            <td><%= Userinfo.publicResearch[i].nameconfer %></td>
                            <td><%= Userinfo.publicResearch[i].location %></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><a href='/editpublication?id=<%= Userinfo.publicResearch[i].id %>&user=<%= user %>'>Edit</a></td>
                            <td><a href='/delpublication?id=<%= Userinfo.publicResearch[i].id %>&user=<%= user %>'>Delete</a></td>
                        </tr>
                        <%}else{%>
                            <tr>
                            <td><%= i+1 %>
                            <td><%= Userinfo.publicResearch[i].namepublic %></td>
                            <td><% for( j=0;j< Userinfo.publicResearch[i].user.length;j++){%>
                                    - <%= Userinfo.publicResearch[i].user[j].iduser.local.title %>
                                    <%= Userinfo.publicResearch[i].user[j].iduser.local.name %>
                                    <%= Userinfo.publicResearch[i].user[j].iduser.local.surname %>
                                    <br>
                                 <%}%>
                            </td>
                            <td>International Journals</td>
                            <td><%= Userinfo.publicResearch[i].datenum %></td>
                            <td><%= Userinfo.publicResearch[i].page %></td>

                            <td></td>
                            <td></td>
                            <td><%= Userinfo.publicResearch[i].namejournal %></td>
                            <td><%= Userinfo.publicResearch[i].vol %></td>
                            <td><%= Userinfo.publicResearch[i].issue %></td>
                            <td><%= Userinfo.publicResearch[i].article %></td>
                            <td><a href='/editpublication?id=<%= Userinfo.publicResearch[i].id %>&user=<%= user %>'>Edit</a></td>
                            <td><a href='/delpublication?id=<%= Userinfo.publicResearch[i].id %>&user=<%= user %>'>Delete</a></td>
                        </tr>
                        <%}                   	
                    	}%>
                     </tbody>
                    </table>
                    </div>
                        
 <%}%> 
                 
                    
                    
                    <!-- end: table full -->
                    <div class="table-foot muffin"> 
                        
                        <div class="pull-right">
                        <div class="btn-group">
                            <button id="tab_2_unselect" class="btn btn-mini" type="button"><i class="glyphicon glyphicon-remove"></i></button>
                            <button id="tab_2_selectall" class="btn btn-mini" type="button">All</button>
                        </div>
                        
                        <div class="btn-group">
                            <a href = "/addpublication?user=<%=user%>"><button id="tab_2_add" class="btn btn-mini" type="button">Add</button></a>
                        </div>
                        
                                    
                        </div>
                        
                        
                        
                    </div>

                </form>
                

        



